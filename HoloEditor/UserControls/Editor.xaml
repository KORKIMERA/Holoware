<UserControl x:Class="HoloCoder.UserControls.Editor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HoloCoder.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    
        <Border x:Name="border" ClipToBounds="True" Grid.Row="2" Grid.Column="0" RenderTransformOrigin=".5,.5"
                HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <TextBox x:Name="TextEditor" TextWrapping="Wrap" AcceptsReturn="True" FontSize="16" 
                     Height="600" Width="800"
                     Background="WhiteSmoke" Text="Hello World" RenderTransformOrigin=".5,.5"
                     VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </Border>
</UserControl>
