<Window x:Class="Holoware.Shell"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" WindowStyle="None" AllowsTransparency="True"
        Title="MainWindow" WindowState="Maximized" Background="White">
    
    <!--Background="#01000000"-->
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        
        <ContentControl x:Name="LeftRegion" Grid.Column="0" VerticalAlignment="Top" VerticalContentAlignment="Stretch" ClipToBounds="True" />
        <ContentControl x:Name="ContentRegion" Grid.Column="1" VerticalAlignment="Top" VerticalContentAlignment="Stretch" ClipToBounds="True" />
        
    </Grid>
</Window>
